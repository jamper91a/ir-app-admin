<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleIcn"
                style="@style/title_icn"
                app:srcCompat="@drawable/icn_commodity_blue" />

            <TextView
                android:id="@+id/titleTxt"
                style="@style/title_text_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventario_eanplu" />
        </LinearLayout>

        <RelativeLayout
            style="@style/editContainer"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtEanPlu"
                style="@style/edit"
                android:hint="@string/ean_plu" />

            <ImageView
                android:id="@+id/icn2"
                style="@style/icnRight"
                app:srcCompat="@drawable/icn_search" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnBus"
            style="@style/button_blue_dark"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="@string/buscar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblDes1"
            style="@style/labelContainer"
            android:hint="@string/description" />

        <TextView
            android:id="@+id/lblDes2"
            style="@style/labelContainer"
            android:hint="@string/description" />

        <TextView
            android:id="@+id/lblDes3"
            style="@style/labelContainer"
            android:hint="@string/description" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_del_producto"
            android:src="@drawable/imagennoencontrada"
            tools:src="@drawable/imagennoencontrada"
            tools:srcCompat="@drawable/imagennoencontrada" />

        <LinearLayout
            android:id="@+id/lnl1a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lbl2"
                style="@style/text_link"
                android:text="@string/desea_continuar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSi"
                    style="@style/button_blue_dark"
                    android:text="@string/si" />

                <Button
                    android:id="@+id/btnNo"
                    style="@style/button_blue_dark"
                    android:text="@string/no_buscar_otro" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEnv"
                style="@style/button_blue_light"
                android:text="@string/enviar_email" />

            <Button
                android:id="@+id/btnVerOtro"
                style="@style/button_blue_light"
                android:text="@string/buscar_otro" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_top_blue_dark"
            android:orientation="vertical">

            <LinearLayout
                style="@style/listHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEpcTitle"
                    style="@style/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/epc"
                    android:textSize="16dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/lst1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtTags"
            style="@style/text_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border_top_blue_dark"
            android:text="@string/tag_leidos"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>