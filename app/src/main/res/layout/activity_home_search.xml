<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".pages.Transfers.HomeTransferencia">
    <LinearLayout
        style="@style/appHeaderContainer"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo2" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleIcn"
                style="@style/title_icn"
                app:srcCompat="@drawable/ic_transfer_blue_dark" />

            <TextView
                android:id="@+id/titleTxt"
                style="@style/title_text_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/busqueda_items" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                style="@style/button_blue"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/icn_ingresos_r"
                android:text="@string/busqueda_items_listar_ubicaciones" />
            <Button
                android:id="@+id/btn2"
                style="@style/button_blue"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/icn_ingresos_r"
                android:text="@string/buscar_sonar_ean" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn3"
                style="@style/button_blue"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/icn_ingresos_r"
                android:text="@string/buscar_sonar_epc" />
            <Button
                android:id="@+id/btn4"
                style="@style/button_blue"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/icn_ingresos_r"
                android:text="@string/buscar_epc_ultima_ubicacion" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>