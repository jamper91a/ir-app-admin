<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:barchart="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleIcn"
            style="@style/title_icn"
            app:srcCompat="@drawable/icn_commodity_blue" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/title_text_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buscar_sonar_ean" />
    </LinearLayout>

    <RelativeLayout
        style="@style/editContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtEanPlu"
            style="@style/edit"
            android:hint="@string/ean_plu" />

        <ImageView
            android:id="@+id/icn2"
            style="@style/icnRight"
            app:srcCompat="@drawable/icn_search" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnBus"
        style="@style/button_blue_dark"
        android:layout_marginTop="10dp"
        android:text="@string/buscar" />

    <LinearLayout
        android:id="@+id/lnl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblDes1"
            style="@style/labelContainer" />

        <TextView
            android:id="@+id/lblDes2"
            style="@style/labelContainer" />

        <TextView
            android:id="@+id/lblDes3"
            style="@style/labelContainer" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_del_producto"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/lnl1a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl2"
                style="@style/text_link"
                android:text="@string/desea_continuar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSi"
                    style="@style/button_blue_dark"
                    android:text="@string/si" />

                <Button
                    android:id="@+id/btnNo"
                    style="@style/button_blue_dark"
                    android:text="@string/no_buscar_otro" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/lnl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLee"
                style="@style/button_blue_light"
                android:layout_weight="1"
                android:text="@string/iniciar" />

            <Button
                android:id="@+id/btnBor"
                style="@style/button_blue_light"
                android:layout_weight="1"
                android:text="@string/borrar" />
            <Button
                android:id="@+id/btnVerOtro"
                style="@style/button_blue_light"
                android:layout_weight="1"
                android:text="@string/ver_otro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/border_top_blue_dark"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView

                android:id="@+id/lst1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <me.ithebk.barchart.BarChart
                android:id="@+id/bar_chart_vertical"
                barchart:bar_type="vertical"
                barchart:bar_width="15dp"
                barchart:bar_color="@color/colorPrimary"
                barchart:bar_text_color="#808080"
                barchart:bar_text_size="10sp"
                barchart:bar_show_auto_color="false"
                barchart:bar_max_value="100"
                barchart:bar_spaces = "0dp"
                barchart:bar_show_value="true"
                barchart:bar_show_animation="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txtTags"
            style="@style/text_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/border_top_blue_dark"
            android:text="@string/tag_leidos"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>