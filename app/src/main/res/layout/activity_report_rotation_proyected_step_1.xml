<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleIcn"
                style="@style/title_icn"
                app:srcCompat="@drawable/icn_inventory_create_blue_dark" />

            <TextView
                android:id="@+id/titleTxt"
                style="@style/title_text_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reporte_diferencia_inventario_erp" />
        </LinearLayout>
        <RelativeLayout
            style="@style/editContainer"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtEanPlu"
                style="@style/edit"
                android:hint="@string/ean_plu" />

            <ImageView
                android:id="@+id/icn2"
                style="@style/icnRight"
                app:srcCompat="@drawable/icn_search" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnBus"
            style="@style/button_blue_dark"
            android:layout_marginTop="10dp"
            android:text="@string/buscar" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblDes1"
            style="@style/labelContainer" />

        <TextView
            android:id="@+id/lblDes2"
            style="@style/labelContainer" />

        <TextView
            android:id="@+id/lblDes3"
            style="@style/labelContainer" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/imagen_del_producto"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/lnl1a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl2"
                style="@style/text_link"
                android:text="@string/desea_continuar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSi"
                    style="@style/button_blue_dark"
                    android:text="@string/si" />

                <Button
                    android:id="@+id/btnNo"
                    style="@style/button_blue_dark"
                    android:text="@string/no_buscar_otro" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnl2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RelativeLayout
            style="@style/editContainer"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt1"
                style="@style/edit"
                android:inputType="number"
                android:hint="@string/dias_de_rotacion" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnGenerateReport"
            style="@style/button_blue_dark"
            android:layout_marginTop="10dp"
            android:text="@string/generate_report" />
    </LinearLayout>
</LinearLayout>