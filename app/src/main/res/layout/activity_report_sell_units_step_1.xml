<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".pages.Inventories.ParcialInventories.Consolidate.ConsolidateInventoryStep1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleIcn"
            style="@style/title_icn"
            app:srcCompat="@drawable/icn_inventory_create_blue" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/title_text_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reporte_unidades_vendidas" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1"
            style="@style/text_link"
            android:text="@string/fecha_inicial" />

        <EditText
            android:id="@+id/edt1"
            style="@style/labelContainer"
            android:gravity="center"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1"
            android:inputType="time"
            android:hint="@string/escoger_fecha"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt2"
            style="@style/text_link"
            android:text="@string/fecha_final" />

        <EditText
            android:id="@+id/edt2"
            style="@style/labelContainer"
            android:gravity="center"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1"
            android:inputType="time"
            android:hint="@string/escoger_fecha"  />
    </LinearLayout>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn1"
        style="@style/button_blue_dark"
        android:text="@string/ver_reporte" />

</LinearLayout>