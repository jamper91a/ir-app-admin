<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.Inventories.ParcialInventories.Create.tabs.TotalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/back_total_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tag_leidos"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt2"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:textSize="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt3"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fecha_del_inventario"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt4"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt5"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zona"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt6"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt7"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textAlignment="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt8"
                style="@style/title_text_blue_dark"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:visibility="gone" />


        </LinearLayout>
        <LinearLayout

            android:layout_gravity="bottom"
            android:id="@+id/timeContainer"
            style="@style/timeContainer"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">

            <TextView
                style="@style/text_white"
                android:textAlignment="center"
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DD/MM/AA" />

            <TextView
                style="@style/text_white"
                android:textAlignment="center"
                android:id="@+id/txtHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HH:MM:SS" />
        </LinearLayout>
    </LinearLayout>




</FrameLayout>