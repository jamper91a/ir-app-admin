<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:windowBackground">@drawable/back_signal_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="editContainer">
        <item name="android:background">@drawable/back_input</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="icn">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

    <style name="edit">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="button_white">
        <item name="android:background">@drawable/back_button_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="button_blue">
        <item name="android:background">@drawable/back_button_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="text_link">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />


</resources>
